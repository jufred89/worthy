<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.NoticeMapper">
 	<select id="list" resultType="com.example.domain.NoticeVO">
 		select * from tbl_information_notice
 		order by nb_no desc
 	</select>
 	<select id="read" resultType="com.example.domain.NoticeVO">
 		select * from tbl_information_notice
 		where nb_no=#{nb_no}
 	</select>
 	<insert id="insert">
 		insert into tbl_information_notice(nb_title,nb_content,nb_writer)
 		values(#{nb_title},#{nb_content},#{nb_writer})
 	</insert>
 	<delete id="delete">
 		delete from tbl_information_notice
 		where nb_no=#{nb_no}
 	</delete>
</mapper>